@model IEnumerable<SportsPro.Models.Technician>

@{
    ViewData["Title"] = "Index";
}

<h1>Technician Manager</h1>

<p>
    <a asp-action="Create">Add Technician</a>
</p>
<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TechnicianId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TechnicianId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TechnicianId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
